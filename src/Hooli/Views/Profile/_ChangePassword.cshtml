@{
    // ViewBag.Title = "Home Page";
}
@model ChangePasswordViewModel

<form asp-controller="Manage" asp-action="ChangePassword" method="post" class="form-horizontal" role="form">
    <h2>Profile settings</h2>
    <div asp-validation-summary="ValidationSummary.All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="OldPassword" class="col-sm-3 col-md-5 col-lg-4 control-label"></label>
        <div class="col-sm-9 col-md-7 col-lg-8">
            <input asp-for="OldPassword" class="form-control" />
            <span asp-validation-for="OldPassword" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="NewPassword" class="col-sm-3 col-md-5 col-lg-4 control-label"></label>
        <div class="col-sm-9 col-md-7 col-lg-8">
            <input asp-for="NewPassword" class="form-control" />
            <span asp-validation-for="NewPassword" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="ConfirmPassword" class="col-sm-3 col-md-5 col-lg-4 control-label"></label>
        <div class="col-sm-9 col-md-7 col-lg-8">
            <input asp-for="ConfirmPassword" class="form-control" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-primary btn-block margin-top">Save changes</button>
        </div>
    </div>
</form>