@model Hooli.Models.PostViewModel

<div class="row">
    <div class="new-post-container margin-top" >
        <div class="edit-info-container margin-top slider">
            <h2>Edit Post</h2>
            <div class="form-horizontal" id="edit_post">

                @*<input type="hidden" id="post_id" value="@Model.post.PostId" />
                <input type="hidden" id="post_groupid" value="@Model.post.GroupGroupId" />
                <input type="hidden" id="post_points" value="@Model.post.Points" />
                <input type="hidden" id="post_userid" value="@Model.post.UserId" />
                <input type="hidden" id="post_parentpostid" value="@Model.post.ParentPostId" />*@

                <div class="form-group">
                    <label for="post_title" class="control-label col-sm-2">Title</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control full-width" id="post_title" value="@Model.post.Title" autofocus="autofocus" required="required" />
                    </div>
                </div>

                <div class="form-group">
                    <label for="post_body" class="control-label col-sm-2">Text</label>
                    <div class="col-sm-10">
                        <textarea class="form-control full-width" id="post_body" required="required">@Model.post.Text</textarea>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <div class="col-sm-12">
                            <button type="button" data-postId="@Model.post.PostId" id="edit-button" class="btn btn-primary btn-block margin-top btn-save">Edit!</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


