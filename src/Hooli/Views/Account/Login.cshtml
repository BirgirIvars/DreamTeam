@model LoginViewModel
@using System.Collections.Generic
@using Microsoft.AspNet.Http
@using Microsoft.AspNet.Http.Authentication
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewBag.Title = "Log in";
}

<main class="container body-content">
    <div class="row">
        <div class="col-lg-4 col-md-5 col-sm-6 col-xs-10 col-centered">
            <div class="content-box">
                <h1>@ViewBag.Title.</h1>
                <form asp-controller="Account" asp-action="Login" id="form-login" asp-route-returnurl="@ViewBag.ReturnUrl" method="post" class="form-horizontal" role="form">
                    <div asp-validation-summary="ValidationSummary.All" class="text-danger"></div>
                    <h2>Log in with email</h2>
                    <fieldset>
                        <input asp-for="Email" class="form-control" id="email" name="email" placeholder="Your email" autofocus="autofocus" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                        <input asp-for="Password" class="form-control" id="password" name="password" placeholder="Password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </fieldset>
                    <div class="checkbox">
                        <input asp-for="RememberMe"/>
                        <label asp-for="RememberMe"></label>
                    </div>
                    <button type="submit" value="Log in" class="btn btn-primary btn-block" id="form_login_button">Log in</button>
                </form>
                <div class="form-login-forgotten text-right">
                    <a asp-action="ForgotPassword">Forgot your password?</a>
                </div>
            </div>

        </div>
    </div>
</main>
