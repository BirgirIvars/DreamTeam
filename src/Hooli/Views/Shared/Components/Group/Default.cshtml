@{
    // ViewBag.Title = "Home Page";
}

@model List<Hooli.Models.Group>

<div class="col-md-8">
    <div class="content-box">
        <h1>Groups you are following</h1>
        <div class="row following-info-container">
            
            @if (Model != null)
            {
                @foreach (var p in Model)
                {
                    <div class="info-photo-container col-sm-12 col-md-6">
                        <div class="info-container">
                            <a asp-controller="Group" asp-action="SingleGroup" asp-route-id="@p.GroupId">
                                @if (@p.Image != null)
                                {
                                    <div class="info-photo" style="background: url(@p.Image) center / cover;">
                                        <div class="info-photo-shade">
                                            <h1>@p.GroupName</h1>
                                        </div>
                                    </div>
                                }
                                @if(@p.Image == null)
                                {
                                    <div class="info-photo" style="background: url(@Url.Content("~/images/hooli_groupphoto_default.jpg")) center / cover;">
                                        <div class="info-photo-shade">
                                            <h1>@p.GroupName</h1>
                                        </div>
                                    </div>
                                }
                            </a>                            
                        </div>
                    </div>
                }
            }
            @if (Model == null)
            {
                <p style="margin-top: 10px;">
                    You are not following any groups, check out our suggestions or search for something interesting!
                </p>            
            }
        </div>
    </div>
</div>

