@model Hooli.Models.Post

<div class="new-post-container margin-top slider">
    <form class="form-horizontal" asp-anti-forgery="true" asp-controller="Post" asp-action="CreateProfilePost" enctype="multipart/form-data" method="post" role="form" >
        <div asp-validation-summary="ValidationSummary.All" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="Title" class="control-label col-sm-2"></label>
            <div class="col-sm-10">
                <input type="text" asp-for="Title" class="form-control full-width" id="post_title" placeholder="Post title" autofocus="autofocus" required="required" />
                <span asp-validation-for="Title" />
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Text" class="control-label col-sm-2" ></label>
            <div class="col-sm-10">
                <textarea asp-for="Text" class="form-control full-width" id="post_body" placeholder="Try to write something interesting!" required="required"></textarea>
                <span asp-validation-for="Text" class="text-danger" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10 col-md-offset-2">
                <div class="fileinputs">
                    <input asp-for="Image" type="file" class="file file-upload" id="file" name="file" />
                    <div class="fakefile full-width">
                        <input type="button" class="btn btn-primary btn-block file-upload-name" value="Choose to uploade image" style="background:#666;"/>
                    </div>
                </div>
                <div asp-validation-for="Image" class="text-danger"></div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-primary btn-block">Post!</button>
            </div>
        </div>
    </form>
</div>